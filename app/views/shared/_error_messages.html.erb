<% if @user.errors.any? %>
  <div>
    <div class="alert alert-danger mb-2">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul class="px-6 py-4">
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>