<% provide(:title, "Login" ) %>
<div class="max-w-md mx-auto">
  <%= form_with(url: login_path, scope: :session) do |f| %>
    <div class="flex flex-col gap-y-1">
      <div class="grid grid-cols-2 gap-2 items-center">
        <%= f.label :email %>
          <%= f.email_field :email, class: 'rounded-md w-full form-control' %>
      </div>
      <div class="grid grid-cols-2 gap-2 items-center">
        <%= f.label :password %>
          <%= f.password_field :password, class: 'rounded-md w-full form-control' %>
      </div>
      <%= f.submit "Login" , class: "btn-primary mt-4 self-center w-full" %>
    </div>
    <% end %>
    <p class="mx-auto mt-6 w-fit">New user? <%= link_to "Sign up now!", signup_path, class: "text-sky-600 font-bold" %></p>
</div>