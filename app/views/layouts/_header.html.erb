<header class="fixed w-full bg-fuchsia-200 p-4 top-0 z-10">
  <div class="container flex justify-between mx-auto">
    <%= link_to "Blog 24" , root_path, id: "logo" %>
      <nav>
        <div class="navbar-header">
          <button id="hamburger" type="button" class="navbar-toggle collapsed flex flex-col gap-1 ml-auto">
            <span class="sr-only">Toggle Navigation</span>
            <span class="icon-bar w-8 h-1 bg-slate-900 block"></span>
            <span class="icon-bar w-8 h-1 bg-slate-900 block"></span>
            <span class="icon-bar w-8 h-1 bg-slate-900 block"></span>
          </button>
        </div>
        <ul class="list-none mt-2 flex-col collapse md:flex-row items-start md:items-center gap-4" id="navbar-menu">
          <li>
            <%= link_to "Home" , root_path %>
          </li>
          <li>
            <%= link_to "Help" , help_path %>
          </li>
          <% if logged_in? %>
            <li><%= link_to "Users", "#" %></li>
            <div class="relative inline-block text-left">
              <div>
                <button type="button" class="inline-flex w-full justify-center items-center gap-x-1.5 rounded-lg p-3 bg-transparent px-3 py-2 text-sm font-semibold text-gray-900 hover:bg-gray-50" id="menu-button">
                  Account &#9660;
                </button>
              </div>
              <div class="dropdown-menu absolute right-0 z-10 mt-2 w-56 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" tabindex="-1" id="dropdown-menu">
                <div class="py-1" role="none">
                  <li class="text-gray-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="menu-item-0"><%= link_to "Profile" , current_user %></li>
                  <li class="text-gray-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1"
                    id="menu-item-1"><%= link_to "Settings" , "#" %></li>
                  <li class="divider h-1 w-full bg-stone-600"></li>
                  <li class="text-gray-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="menu-item-2">
                    <%= link_to "Log out", logout_path, data: { "turbo-method": :delete } %>
                  </li>
                </div>
              </div>
            </div>
          <% else %>
            <li><%= link_to "Login" , login_path %></li>
          <% end %>
        </ul>
      </nav>
  </div>
</header>